{
  "name": "spec.edmcouncil.org",
  "version": "1.0.0",
  "description": "The Specifications Site of the Enterprise Data Management Council",
  "main": "src/index.js",
  "author": "Jacobus Geluk <jacobus.geluk@gmail.com>",
  "license": "MIT",
  "homepage": "https://edmcouncil.github.io/specsite",
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules -o src/ src/",
    "watch-css": "yarn build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules -o src/ src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "yarn run build-css && react-scripts build",
    "test": "yarn run build-css && react-scripts test --env=jsdom",
    "travis-build": "CI=true yarn run test && react-scripts build",
    "lint:styles": "scss-lint src/",
    "lint:scripts": "eslint -c .eslintrc src",
    "lint": "yarn lint:styles && yarn lint:scripts",
    "lint:fix": "eslint -c .eslintrc --fix app",
    "flow": "flow",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "html-webpack-plugin": "^2.28.0",
    "immutable": "^3.8.1",
    "markdown-loader": "^2.0.0",
    "markdown-react-js": "^0.3.0",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-md": "^1.0.15",
    "react-transition-group": "^1.1.3",
    "reactjs": "^1.0.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "chai-immutable": "^1.6.0",
    "cpx": "^1.5.0",
    "flow-bin": "^0.47.0",
    "gh-pages": "^1.0.0",
    "html-loader": "^0.4.5",
    "json-load": "^1.0.1",
    "node-sass-chokidar": "^0.0.2",
    "react-scripts": "^1.0.7",
    "tsd": "^0.6.5",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}
